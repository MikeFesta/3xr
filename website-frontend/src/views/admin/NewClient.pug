v-container(fluid)
  admin-tabs
  v-card-title
    h2 New Client
  v-row
    v-col(cols=6, offset=3)
      v-text-field(@change='setChanged', label='Name', required, v-model='client.name')
      .error-message(v-if='errorMessage')
        | {{ errorMessage }}
      v-col.text-right
        spinner-button(
          color='primary',
          label='Add Client',
          :loading='saving',
          loadingLabel='Creating Client',
          :onClick='createClient'
        )