.spinner-button
  v-btn(:color='color', :disabled='disabled || loading', @click='click')
    div(v-if='errorMessage')
      v-icon.mr-2(v-if='icon') mdi-alert-box
      | {{ errorMessage }}
    div(v-if='loading && !errorMessage')
      v-progress-circular.mr-1(:size='20', :width='2', color='white', indeterminate)
      |
      | {{ loadingLabel }}
    div(v-if='!loading && !errorMessage')
      v-icon.mr-2(color='white' v-if='icon') {{ icon }}
      span.white-font
        | {{ label }}
