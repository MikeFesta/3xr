.part-banner
  v-row
    v-col(cols=12)
      .part-details
        h1 {{ part.name }}
    v-col(cols=12, md=3)
      .part-download
        .download-button
          v-btn.ma-4(@click='downloadPart', text)
            v-progress-circular(v-if='downloading', :size='20', :width='2', color='white', indeterminate)
            v-icon(v-else) mdi-file-download
            .black-font
              | Part File (.blend)
